<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
    xmlns:gwt='urn:import:com.google.gwt.user.client.ui'
    xmlns:ricbit='urn:import:com.ricbit.gibit.client'>
  
  <ui:style>
    .queryPanel {
      text-align: center;
      margin-top: 20px;
    }
    .query {
      width: 400px;
      margin-right: 5px;
      height: 20px;
    }
    .fixedWidth {
      width: 450px;
      text-align: center;
      display: inline;
    }
    .clearBoth {
      clear: both;
    }
    .image {
      width: 500px;
      height: 230px;
      display: block;
      margin: 10px auto;
    }
    .pagination {
      margin-right: 20px;
      margin-bottom: 2em;
    }
    .footer {
      position: fixed;
      bottom: 0px;
      text-align: center;
      width: 100%;
    }
  </ui:style>
  
  <gwt:FlowPanel ui:field="outerPanel">
    <gwt:Image url="logotipo_gibit.jpg" styleName="{style.image}" />
    <gwt:FlowPanel styleName="{style.queryPanel}">
      <gwt:FlowPanel styleName="{style.fixedWidth}">
        <gwt:Label text="Enter a comic series name (Batman, X-Men, MÃ´nica):" />
      </gwt:FlowPanel>
      <gwt:FlowPanel styleName="{style.fixedWidth}">
        <gwt:TextBox ui:field="queryField" styleName="{style.query}" text="new mutants" />
        <gwt:Button ui:field="sendButton" text="Search" />
      </gwt:FlowPanel>
    </gwt:FlowPanel>
    <ricbit:SeriesPagination ui:field="seriesPagination" 
        styleName="{style.pagination}" visible="false" />
    <gwt:HTML ui:field="debugPanel" styleName="{style.clearBoth}" />
    <gwt:HTMLPanel styleName="{style.footer}">
      Written by <a href="http://blog.ricbit.com/">Ricardo Bittencourt</a>. 
      Uses data from the <a href="http://www.comics.org/">Grand Comics Database</a>
    </gwt:HTMLPanel>
  </gwt:FlowPanel>

</ui:UiBinder>